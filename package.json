{
	"name": "seeyouinshell",
	"displayName": "Run Script in Terminal",
	"description": "run script in terminal",
	"publisher": "tingyu-shell",
	"repository": {
		"type": "git",
		"url": "https://github.com/TingyuShare/run-in-terminal"
	},
	"version": "0.0.6",
	"engines": {
		"vscode": "^1.63.0"
	},
	"categories": [
		"Other"
	],
	"keywords": [
		"terminal",
		"shell",
		"selection",
		"copy",
		"send",
		"env",
		"bash",
		"zsh"
	],
	"markdown": "github",
	"activationEvents": [
		"*"
	],
	"main": "./out/extension.js",
	"icon": "images/icon.png",
	"contributes": {
		"commands": [
			{
				"command": "runInTerminal.select-selection",
				"title": "RunInTerminal: Selected selection"
			},
			{
				"command": "runInTerminal.active-file",
				"title": "RunInTerminal: Active file"
			}
		],
		"menus": {
			"editor/context": [
				{
					"command": "runInTerminal.active-file",
					"group": "navigation@1.31"
				},
				{
					"command": "runInTerminal.select-selection",
					"group": "navigation@1.31"
				}
			]
		},
		"configuration": {
			"title": "Run In Terminal",
			"properties": {
				"runInTerminal.commandMap": {
					"type": "object",
					"default": {
						".py": "python",
						".go": "go run",
						".js": "node",
						".ts": "ts-node",
						".sh": "bash",
						".rb": "ruby",
						".php": "php",
						".pl": "perl",
						".r": "Rscript",
						".ps1": "powershell -ExecutionPolicy Bypass -File"
					},
					"description": "A map of file extensions to shell commands to be executed. The file name will be appended to the command."
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/mocha": "^8.0.4",
		"@types/node": "^24.10.1",
		"@types/vscode": "^1.63.0",
		"@typescript-eslint/eslint-plugin": "^4.14.1",
		"@typescript-eslint/parser": "^4.14.1",
		"eslint": "^7.19.0",
		"glob": "^11.0.3",
		"mocha": "^8.2.1",
		"typescript": "^5.9.3",
		"vsce": "^2.15.0",
		"vscode-test": "^1.5.0"
	}
}
